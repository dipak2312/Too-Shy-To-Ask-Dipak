<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_top"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_150"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_centerHorizontal="true"
                android:src="@drawable/quiz_wohoo">

            </ImageView>

            <TextView
                android:id="@+id/txt_whoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_40"
                android:fontFamily="@font/worksansmedium"
                android:text="@string/wohoo_great"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/percentage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_whoo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10"
                android:fontFamily="@font/worksansregular"
                android:text="90% Score"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/percentage_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/text_size20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/text_size20"
                android:fontFamily="@font/worksansregular"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size14" />

            <Button
                android:id="@+id/home_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_20"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/back_to_home"
                android:layout_below="@id/title_txt"
                android:fontFamily="@font/worksansbold"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_20"
                android:text="@string/back_to_home"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size14" />

            <Button
                android:id="@+id/btn_completed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_below="@id/home_button"
                android:fontFamily="@font/worksansbold"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_20"
                android:background="@drawable/active_con_btn"
                android:layout_marginBottom="@dimen/margin_30"
                android:text="@string/completed"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size14"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
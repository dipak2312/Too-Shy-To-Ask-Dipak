<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="@dimen/margin_150"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@drawable/infocard_shadow"
        android:elevation="@dimen/margin_3"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:layout_width="@dimen/margin_150"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:background="@drawable/help_background">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/blog_img"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="@dimen/margin_150"
                    android:background="@drawable/status_background"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blog2"
                    app:shapeAppearanceOverlay="@style/radiusimageview"/>

                <ImageView
                    android:id="@+id/save_img"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/blog_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_35"
                android:text="Obesity â€“ much more than a cosmetic"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size12"
                android:fontFamily="@font/worksansmedium"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
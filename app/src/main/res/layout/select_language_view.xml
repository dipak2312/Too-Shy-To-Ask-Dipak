<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_language_en"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_language"
            android:layout_centerVertical="true"
            android:fontFamily="@font/worksansregular"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="@dimen/margin_15"
            android:layout_height="@dimen/margin_15"
            android:src="@drawable/back_arrow_lang"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_language_en"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/eng_lang_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/language_background"
            android:buttonTint="@color/purple"
            android:checked="false"
            android:fontFamily="@font/worksanssemibold"
            android:onClick="radioButtonClickEvent"
            android:paddingStart="@dimen/margin_10"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size15" />

        <RadioButton
            android:id="@+id/hindi_lang_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60"
            android:buttonTint="@color/purple"
            android:checked="false"
            android:visibility="visible"
            android:onClick="radioButtonClickEvent"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size15"
            android:paddingStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/language_background"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:fontFamily="@font/worksanssemibold"
            android:text="हिंदी"/>

        <RadioButton
            android:id="@+id/marathi_lang_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60"
            android:buttonTint="@color/purple"
            android:checked="false"
            android:visibility="visible"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:background="@drawable/language_background"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/text_size15"
            android:fontFamily="@font/worksanssemibold"
            android:onClick="radioButtonClickEvent"
            android:text="मराठी"/>

        <RadioButton
            android:id="@+id/gujarati_lang_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60"
            android:buttonTint="@color/purple"
            android:checked="false"
            android:visibility="visible"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:background="@drawable/language_background"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/text_size15"
            android:fontFamily="@font/worksanssemibold"
            android:onClick="radioButtonClickEvent"
            android:text="ગુજરાતી"/>

        <RadioButton
            android:id="@+id/Tamil_lang_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60"
            android:buttonTint="@color/purple"
            android:checked="false"
            android:visibility="visible"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:background="@drawable/language_background"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/text_size15"
            android:fontFamily="@font/worksanssemibold"
            android:onClick="radioButtonClickEvent"
            android:text="தமிழ்"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_marginTop="@dimen/margin_40"
        android:includeFontPadding="false"
        android:gravity="center"
        android:fontFamily="@font/worksansbold"
        android:layout_below="@+id/radioGrp"
        android:background="@drawable/active_con_btn"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:text="@string/select_language"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size14" />


</RelativeLayout>
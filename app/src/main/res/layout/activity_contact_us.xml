<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Help.ContactUsActivity">

    <RelativeLayout
        android:id="@+id/rel_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@drawable/infocard_shadow"
        android:elevation="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rel_back"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_20">

                <ImageView
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Support"
                android:textColor="@color/black"
                android:fontFamily="@font/worksansmedium"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size18"/>

        </RelativeLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel_top_bar"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksansmedium"
            android:text="Submit a request"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size15" />

        <LinearLayout
            android:id="@+id/contact_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_enter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/background"
                android:fontFamily="@font/worksanslight"
                android:gravity="top"
                android:hint="@string/email"
                android:paddingStart="@dimen/padding_15"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_15"
                android:textColorHint="@color/teal_700"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                app:hintTextColor="@color/purple"
                app:placeholderText="Enter Your Email"
                app:placeholderTextColor="#a2a2a2">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email_enter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_37"
                    android:background="@drawable/border"
                    android:fontFamily="@font/worksansmedium"
                    android:gravity="top"
                    android:inputType="textEmailAddress"
                    android:paddingTop="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size16" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sub_enter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/background"
                android:fontFamily="@font/worksanslight"
                android:gravity="top"
                android:hint="@string/subject"
                android:paddingStart="@dimen/padding_15"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_15"
                android:textColorHint="@color/teal_700"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                app:hintTextColor="@color/purple"
                app:placeholderText="Enter Your Subject"
                app:placeholderTextColor="#a2a2a2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_sub_enter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_35"
                    android:layout_marginTop="@dimen/margin_3"
                    android:background="@drawable/border"
                    android:fontFamily="@font/worksansmedium"
                    android:gravity="top"
                    android:inputType="textCapSentences"
                    android:paddingTop="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size16" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_enter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_115"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/background"
                android:fontFamily="@font/worksanslight"
                android:gravity="top"
                android:hint="@string/description"
                android:paddingStart="@dimen/padding_15"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_15"
                android:textColorHint="@color/teal_700"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                app:hintTextColor="@color/purple"
                app:placeholderText="Enter Your Description"
                app:placeholderTextColor="#a2a2a2">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_100"
                    android:background="@drawable/border"
                    android:fontFamily="@font/worksansmedium"
                    android:gravity="top"
                    android:inputType="textPostalAddress|textMultiLine|textCapSentences"
                    android:paddingTop="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size16" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:fontFamily="@font/worksanslight"
                android:text="Please enter the details of your request. A member of our support staff will respond as soon as possible."
                android:textColor="@color/black"
                android:textSize="@dimen/text_size12" />

            <RelativeLayout
                android:id="@+id/add_file"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/background">

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_8"
                    android:fontFamily="@font/worksansmedium"
                    android:text="Attachment (Optional)"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_txt"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_30"
                        android:fontFamily="@font/worksansmedium"
                        android:gravity="center_vertical"
                        android:text="Add file"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_30"
                        android:layout_marginStart="@dimen/margin_5"
                        android:fontFamily="@font/worksanslight"
                        android:gravity="center_vertical"
                        android:text="(image/screenshot/pdf)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size12" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

            <Button
                android:id="@+id/submit_req"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_40"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:fontFamily="@font/worksansbold"
                android:background="@drawable/active_con_btn"
                android:layout_marginBottom="@dimen/margin_30"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size14" />

        </RelativeLayout>


</RelativeLayout>
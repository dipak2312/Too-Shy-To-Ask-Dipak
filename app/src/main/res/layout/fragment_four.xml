        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_55"
            android:background="@drawable/background">


            <Spinner
                android:id="@+id/spinner_blood"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/worksansmedium"
                android:background="@drawable/border"
                android:textSize="@dimen/text_size16"/>

            <ImageView
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/down_arrow"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/height_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_55"
            android:background="@drawable/background"
            android:fontFamily="@font/worksansmedium"
            android:gravity="top"
            android:paddingStart="@dimen/padding_15"
            android:paddingTop="@dimen/margin_3"
            android:paddingEnd="@dimen/padding_15"
            android:orientation="horizontal"
            app:hintTextAppearance="@style/TextInputLayoutHintText"
            app:hintTextColor="@color/purple">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_37"
                android:background="@drawable/border"
                android:fontFamily="@font/worksansmedium"
                android:gravity="top"
                android:maxLength="3"
                android:hint="@string/height"
                android:inputType="phone"
                android:paddingTop="@dimen/margin_3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size16" />

        </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_48"
                android:text="Cms"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_2"
                android:gravity="center_vertical"
                android:fontFamily="@font/worksansregular"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/margin_15"
                android:textSize="@dimen/text_size12"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weight_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55"
                android:background="@drawable/background"
                android:fontFamily="@font/worksansmedium"
                android:gravity="top"
                android:paddingStart="@dimen/padding_15"
                android:paddingTop="@dimen/margin_3"
                android:paddingEnd="@dimen/padding_15"
                android:orientation="horizontal"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                app:hintTextColor="@color/purple">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_37"
                    android:background="@drawable/border"
                    android:fontFamily="@font/worksansmedium"
                    android:gravity="top"
                    android:inputType="phone"
                    android:hint="@string/weight"
                    android:maxLength="5"
                    android:paddingTop="@dimen/margin_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size16" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_48"
                android:text="Kgs"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_2"
                android:gravity="center_vertical"
                android:fontFamily="@font/worksansregular"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/margin_15"
                android:textSize="@dimen/text_size12"/>

        </RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_110"
        android:background="@drawable/infocard_shadow"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:gravity="center"
        android:elevation="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_110"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/help_background">


            <ImageView
                android:id="@+id/help_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_80"
                android:src="@drawable/using_tsta"/>

            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using TSTA"
                android:padding="@dimen/margin_2"
                android:textSize="@dimen/text_size10"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/worksansmedium"
                android:layout_marginBottom="@dimen/margin_5"
                android:textColor="@color/black"/>

        </LinearLayout>

        </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/chatt_lin_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_alignParentEnd="true"
        android:background="@drawable/expert_reply_que_background"
        android:layout_marginStart="@dimen/margin_80">

        <TextView
            android:id="@+id/user_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi this testing message for ask and expert"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_centerInParent="true"
            android:fontFamily="@font/worksansregular"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_15"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chatt_lin_lay"
        android:layout_marginEnd="@dimen/margin_5">

        <TextView
            android:id="@+id/txt_my_chat_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color"
            android:fontFamily="@font/worksansregular"
            android:textSize="@dimen/text_size12"
            android:text="01 Mar 2021 02:14 PM "/>

    </RelativeLayout>

</RelativeLayout>
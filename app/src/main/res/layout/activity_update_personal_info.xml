<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Setting.UpdateProfile.UpdatePersonalInfoActivity">

    <RelativeLayout
        android:id="@+id/rel_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@drawable/infocard_shadow"
        android:elevation="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rel_back"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_20">

                <ImageView
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/worksansregular"
                android:text="Update your Personal Info"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size18" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_top_bar"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/view_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@drawable/background">

                <TextView
                    android:id="@+id/blood_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:fontFamily="@font/worksanslight"
                    android:textColor="@color/purple"
                    android:paddingStart="@dimen/margin_15"
                    android:textSize="@dimen/text_size12"
                    android:paddingEnd="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"/>

                <Spinner
                    android:id="@+id/spinner_blood"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_35"
                    android:layout_below="@id/blood_group"
                    android:layout_centerVertical="true"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:fontFamily="@font/worksansmedium"
                    android:background="@drawable/border"
                    android:textSize="@dimen/text_size16"/>


                <!--<EditText
                    android:id="@+id/etBlood_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    android:layout_below="@+id/blood_group"
                    android:paddingStart="@dimen/margin_15"
                    android:fontFamily="@font/worksansregular"
                    android:paddingEnd="@dimen/margin_10"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size15"
                    android:inputType="text"/>-->

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/view_background"
            android:layout_marginTop="@dimen/margin_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@drawable/background">

                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:fontFamily="@font/worksanslight"
                    android:textColor="@color/purple"
                    android:paddingStart="@dimen/margin_15"
                    android:textSize="@dimen/text_size12"
                    android:paddingEnd="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height">

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_48"
                        android:paddingStart="@dimen/margin_15"
                        android:fontFamily="@font/worksansregular"
                        android:paddingEnd="@dimen/margin_10"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/text_size15"
                        android:inputType="phone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_48"
                        android:text="cms"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:fontFamily="@font/worksansregular"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:textSize="@dimen/text_size14"/>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/view_background"
            android:layout_marginTop="@dimen/margin_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@drawable/background">

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:fontFamily="@font/worksanslight"
                    android:textColor="@color/purple"
                    android:paddingStart="@dimen/margin_15"
                    android:textSize="@dimen/text_size12"
                    android:paddingEnd="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight">

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_48"
                        android:paddingStart="@dimen/margin_15"
                        android:fontFamily="@font/worksansregular"
                        android:paddingEnd="@dimen/margin_10"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/text_size15"
                        android:inputType="phone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_48"
                        android:text="kgs"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:fontFamily="@font/worksansregular"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:textSize="@dimen/text_size14"/>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_30">

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:includeFontPadding="false"
            android:text="UPDATE"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size14"
            android:fontFamily="@font/worksansbold"
            android:background="@drawable/active_con_btn"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>
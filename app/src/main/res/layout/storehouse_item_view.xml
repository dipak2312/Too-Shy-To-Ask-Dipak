        <LinearLayout
            android:layout_width="@dimen/margin_100"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:background="@drawable/help_background">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/storehouse_items_img"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_100"
                    android:background="@drawable/status_background"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blog2"
                    app:shapeAppearanceOverlay="@style/radiusimage"/>

                    <ImageView
                        android:id="@+id/lock_fent_img"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:src="@drawable/lock_fent"
                        android:visibility="gone"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/storehouse_item_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relationships"
                    android:textSize="@dimen/text_size12"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_2"
                    android:paddingEnd="@dimen/margin_2"
                    android:fontFamily="@font/worksansmedium"
                    android:textColor="@color/black"/>

            </LinearLayout>


    </RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/margin_110"
        android:layout_height="@dimen/margin_120"
        android:background="@drawable/infocard_shadow"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:gravity="center"
        android:elevation="@dimen/margin_5">


        <LinearLayout
            android:layout_width="@dimen/margin_110"
            android:layout_height="@dimen/margin_120"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/help_background">


            <ImageView
                android:id="@+id/storehouse_items_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_90"
                android:src="@drawable/relationships"/>

            <TextView
                android:id="@+id/storehouse_item_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relationships"
                android:textSize="@dimen/text_size10"
                android:fontFamily="@font/worksansmedium"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
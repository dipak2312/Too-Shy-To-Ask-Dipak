<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_language_en"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_photo"
            android:layout_centerVertical="true"
            android:fontFamily="@font/worksansmedium"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/select_image_dialog_close_btn"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:src="@drawable/back_arrow_lang"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/rel_language_en"
        android:background="#a2a2a2a2" />


    <RelativeLayout
        android:id="@+id/select_image_dialog_btn_camera_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_below="@+id/line">

        <Button
            android:id="@+id/select_image_dialog_btn_camera_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/worksansregular"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="60dp"
            android:text="@string/camera"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size16" />

        <ImageView
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:background="@drawable/camera"
            android:elevation="3dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_image_dialog_btn_gallery_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_below="@+id/select_image_dialog_btn_camera_btn_container">

        <Button
            android:id="@+id/select_image_dialog_btn_gallery_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingStart="60dp"
            android:textAllCaps="false"
            android:text="@string/gallery"
            android:fontFamily="@font/worksansregular"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:visibility="visible" />

        <ImageView
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:background="@drawable/gallery"
            android:elevation="3dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remove_image_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_below="@+id/select_image_dialog_btn_gallery_btn_container">

        <Button
            android:id="@+id/remove_image_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingStart="60dp"
            android:textAllCaps="false"
            android:text="@string/remove_profile"
            android:fontFamily="@font/worksansregular"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:visibility="visible" />

        <ImageView
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_centerVertical="true"
            android:background="@drawable/remove"
            android:elevation="3dp" />


    </RelativeLayout>



</RelativeLayout>
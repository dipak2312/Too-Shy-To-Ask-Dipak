<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.14"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_rank"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@drawable/rank1">

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.23">

            <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/img_user_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="3dp">

            </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.40"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3"
                android:ellipsize="end"
                android:fontFamily="@font/worksansmedium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Dipak Yadav"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.23"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:ellipsize="end"
                android:fontFamily="@font/worksansregular"
                android:maxLines="2"
                android:text="10m 33s"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size13" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tsta_leaderboard"
        android:layout_below="@id/lin_total"/>

</RelativeLayout>
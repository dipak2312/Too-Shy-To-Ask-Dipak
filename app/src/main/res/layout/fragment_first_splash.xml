<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.SplashScreenFragment.FirstSplashFragment">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/margin_220"
        android:layout_height="@dimen/margin_200"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true">

    </ImageView>

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/worksansregular"
        android:textSize="@dimen/text_size25"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_50"
        android:text=""/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/worksansregular"
        android:textSize="@dimen/text_size15"
        android:paddingStart="@dimen/margin_50"
        android:paddingEnd="@dimen/margin_50"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_20"
        android:text=""/>

</RelativeLayout>
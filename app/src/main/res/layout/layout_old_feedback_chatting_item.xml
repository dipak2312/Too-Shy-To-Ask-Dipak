<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_15">

    <TextView
        android:id="@+id/messageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message from Expert"
        android:textSize="@dimen/text_size15"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:fontFamily="@font/worksansregular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="June 07 02:55 PM"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_below="@+id/messageFrom"
        android:textSize="@dimen/text_size12"
        android:fontFamily="@font/worksanslight"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can I get pregnant the first time I have sex?"
        android:layout_below="@+id/date"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:textSize="@dimen/text_size15"
        android:fontFamily="@font/worksansregular"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:layout_below="@+id/message"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/line_color"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".Activity.Setting.UpdateProfileActivity">

    <FrameLayout
        android:id="@+id/profile_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/rel_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@drawable/infocard_shadow"
        android:elevation="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rel_back"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_20">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textColor="@color/black"
                android:fontFamily="@font/worksansmedium"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size18"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/interestLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="end"
        android:scrollbarSize="@dimen/margin_3"
        android:scrollbarThumbVertical="@color/purple"
        android:layout_marginEnd="@dimen/margin_2"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:layout_below="@+id/rel_top_bar"
        android:layout_marginTop="@dimen/margin_2">

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@id/rel_top_bar"
            android:background="@drawable/transparent_background">

            <RelativeLayout
                android:id="@+id/profile_image_lay"
                android:layout_width="@dimen/margin_100"
                android:layout_height="@dimen/margin_100"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_30">


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/margin_90"
                    android:layout_height="@dimen/margin_90"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/margin_3"
                    android:src="@drawable/avatar1" />

            </RelativeLayout>


            <TextView
                android:id="@+id/change_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image_lay"
                android:layout_centerHorizontal="true"
                android:textColor="@color/purple"
                android:layout_marginTop="@dimen/margin_5"
                android:fontFamily="@font/worksansregular"
                android:textSize="@dimen/text_size18"
                android:text="Change Avtar"/>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/change_avatar"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                app:boxStrokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/view_background">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_65"
                        android:background="@drawable/background">

                        <TextView
                            android:id="@+id/first_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name"
                            android:textColor="@color/purple"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size12"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/worksanslight"/>

                        <EditText
                            android:id="@+id/edit_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_35"
                            android:layout_below="@id/first_txt"
                            android:layout_marginTop="@dimen/margin_3"
                            android:autofillHints="name"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:fontFamily="@font/worksansmedium"
                            android:inputType="textPersonName"
                            android:background="@drawable/border"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size16" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/view_background"
                    android:layout_marginTop="@dimen/margin_15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_65"
                        android:background="@drawable/background">

                        <TextView
                            android:id="@+id/last_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name"
                            android:textColor="@color/purple"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size12"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/worksanslight"/>

                        <EditText
                            android:id="@+id/edit_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_35"
                            android:layout_below="@id/last_txt"
                            android:autofillHints="name"
                            android:layout_marginTop="@dimen/margin_3"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_15"
                            android:fontFamily="@font/worksansmedium"
                            android:background="@drawable/border"
                            android:inputType="textPersonName"
                            android:textSize="@dimen/text_size16" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/view_background"
                    android:layout_marginTop="@dimen/margin_15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_65"
                        android:background="@drawable/background">

                        <TextView
                            android:id="@+id/mobile_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textColor="@color/purple"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size12"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/worksanslight"/>

                        <EditText
                            android:id="@+id/edit_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_35"
                            android:layout_below="@id/mobile_no"
                            android:autofillHints="phone"
                            android:layout_marginTop="@dimen/margin_3"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:fontFamily="@font/worksansmedium"
                            android:background="@drawable/border"
                            android:inputType="number"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size16" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/view_background"
                    android:layout_marginTop="@dimen/margin_15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_65"
                        android:background="@drawable/background">

                        <TextView
                            android:id="@+id/email_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textColor="@color/purple"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size12"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/worksanslight"/>

                        <EditText
                            android:id="@+id/edit_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_35"
                            android:layout_below="@id/email_txt"
                            android:autofillHints="emailAddress"
                            android:layout_marginTop="@dimen/margin_3"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:fontFamily="@font/worksansmedium"
                            android:background="@drawable/border"
                            android:inputType="textWebEmailAddress"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size16" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/view_background"
                    android:layout_marginTop="@dimen/margin_15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_65"
                        android:background="@drawable/background"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dob_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/purple"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size12"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/worksanslight"/>

                        <TextView
                            android:id="@+id/edit_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dob_txt"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:hint="@string/select_your_dob"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/margin_3"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:fontFamily="@font/worksansmedium"
                            android:background="@drawable/border"
                            android:layout_marginStart="@dimen/margin_15"
                            android:textSize="@dimen/text_size16" />

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:src="@drawable/calendar"/>

                    </RelativeLayout>
                </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/margin_10">

                <Button
                    android:id="@+id/male"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_45"
                    android:text="@string/male"
                    android:clickable="true"
                    android:fontFamily="@font/worksansregular"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:textSize="@dimen/text_size14"
                    android:background="@drawable/gender_border_inactive"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/female"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_45"
                    android:text="@string/female"
                    android:clickable="true"
                    android:fontFamily="@font/worksansregular"
                    android:textSize="@dimen/text_size14"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:background="@drawable/gender_border_inactive"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/other"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_45"
                    android:text="@string/other"
                    android:clickable="true"
                    android:fontFamily="@font/worksansregular"
                    android:textSize="@dimen/text_size14"
                    android:layout_marginStart="@dimen/margin_5"
                    android:background="@drawable/gender_border_inactive"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:orientation="vertical"
                android:layout_below="@id/info">

                <RelativeLayout
                    android:id="@+id/update_interest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/update_shadow"
                    android:elevation="@dimen/margin_3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50"
                        android:background="@drawable/help_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your Interests"
                        android:textColor="@color/black"
                        android:fontFamily="@font/worksansregular"
                        android:textSize="@dimen/text_size14"
                        android:layout_marginStart="@dimen/margin_15"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/update_arrow"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/update_arrow"
                        android:layout_marginEnd="@dimen/margin_15"/>

                </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/update_health"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/update_shadow"
                    android:elevation="@dimen/margin_3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50"
                        android:background="@drawable/help_background">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update your Health Issues"
                            android:textColor="@color/black"
                            android:fontFamily="@font/worksansregular"
                            android:textSize="@dimen/text_size14"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/margin_15"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/update_arrow"
                            android:layout_marginEnd="@dimen/margin_15"/>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/update_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/update_shadow"
                    android:elevation="@dimen/margin_3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50"
                        android:background="@drawable/help_background">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update your Personal Info"
                            android:textColor="@color/black"
                            android:fontFamily="@font/worksansregular"
                            android:textSize="@dimen/text_size14"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/margin_15"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/update_arrow"
                            android:layout_marginEnd="@dimen/margin_15"/>

                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginTop="@dimen/margin_40"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/active_con_btn"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size14" />


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
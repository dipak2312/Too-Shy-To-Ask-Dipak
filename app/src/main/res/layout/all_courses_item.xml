<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/infocard_shadow"
        app:cardElevation="@dimen/margin_3"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        app:cardCornerRadius="@dimen/margin_7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/help_background">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/blog_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_160"
                    android:background="@drawable/status_background"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/courses1"
                    app:shapeAppearanceOverlay="@style/radiusimageview"/>

                <ImageView
                    android:id="@+id/save_img"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>

                <ImageView
                    android:id="@+id/lock_img"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/lock_dark"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/courses_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obesity – much more than a cosmetic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size16"
                    android:fontFamily="@font/worksansregular"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/courses_title"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10">

                    <TextView
                        android:id="@+id/course_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h 15m"
                        android:textColor="@color/line_color"
                        android:fontFamily="@font/worksansregular"
                        android:textSize="@dimen/text_size12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="●"
                        android:layout_marginStart="@dimen/margin_10"
                        android:textColor="@color/purple"
                        android:fontFamily="@font/worksansregular"
                        android:textSize="@dimen/text_size8"/>



                    <TextView
                        android:id="@+id/lessons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 Lessons"
                        android:layout_marginStart="@dimen/margin_10"
                        android:textColor="@color/line_color"
                        android:fontFamily="@font/worksansregular"
                        android:textSize="@dimen/text_size12"/>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
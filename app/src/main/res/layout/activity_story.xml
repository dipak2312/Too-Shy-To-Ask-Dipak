<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Story.StoryActivity">

    <ImageView
        android:id="@+id/story_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/story_image"
        android:scaleType="centerCrop"/>

    <pt.tornelas.segmentedprogressbar.SegmentedProgressBar
        android:id="@+id/story_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_3"
        android:layout_margin="@dimen/margin_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:segmentBackgroundColor="@color/story_progress_background"
        app:segmentSelectedBackgroundColor="@color/story_progress"
        app:segmentStrokeColor="@android:color/black"
        app:segmentSelectedStrokeColor="@android:color/black"
        app:segmentStrokeWidth="@dimen/margin_1"
        app:segmentCornerRadius="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        app:segmentMargins="@dimen/default_segment_margin"
        app:totalSegments="1"
        app:timePerSegment="2000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <View
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        
        
        
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/rel_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_below="@id/story_progress_bar"
        android:layout_marginTop="@dimen/margin_10">

    <TextView
        android:id="@+id/story_title"
        android:layout_width="@dimen/margin_250"
        android:layout_height="wrap_content"
        android:text="Duis egestas dui ipsum, eleifend"
        android:fontFamily="@font/worksansmedium"
        android:alpha="0.7"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size18"
        android:singleLine="true"/>

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_alignParentEnd="true"
            android:src="@drawable/back_arrow"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/day"
        android:layout_width="@dimen/margin_250"
        android:layout_height="wrap_content"
        android:text="Yesterday"
        android:layout_marginStart="@dimen/margin_20"
        android:fontFamily="@font/worksansmedium"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size12"
        android:alpha="0.5"
        android:layout_below="@id/rel_top_bar"
        android:layout_marginTop="@dimen/margin_10"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="@dimen/margin_35"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_rel"
        android:layout_marginEnd="@dimen/margin_20"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:src="@drawable/like"/>

        <ImageView
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:src="@drawable/share"
            android:layout_marginTop="@dimen/margin_15"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/arrow_up"
            android:layout_width="@dimen/margin_15"
            android:layout_height="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/arrow_up" />

        <TextView
            android:id="@+id/link_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_20"
            android:fontFamily="@font/worksansregular"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_15"
            android:text="Swipe up to know more"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size15"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
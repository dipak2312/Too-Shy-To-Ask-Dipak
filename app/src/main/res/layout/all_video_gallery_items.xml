<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/video_play_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_185"
        android:orientation="vertical"
        android:background="@drawable/infocard_shadow"
        app:cardElevation="@dimen/margin_3"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        app:cardCornerRadius="@dimen/margin_7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_185"
            android:orientation="vertical"
            android:background="@drawable/help_background">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/blog_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_140"
                    android:background="@drawable/status_background"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blog2"
                    app:shapeAppearanceOverlay="@style/radiusimageview"/>

                <ImageView
                    android:id="@+id/play_video"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:src="@drawable/video_img"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"/>

                <ImageView
                    android:id="@+id/save_img"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>

                <ImageView
                    android:id="@+id/lock_img"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/lock_dark"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/blog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obesity â€“ much more than a cosmetic "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size12"
                android:fontFamily="@font/worksansmedium"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
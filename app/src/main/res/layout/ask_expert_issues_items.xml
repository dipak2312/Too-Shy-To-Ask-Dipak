<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_lay_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@drawable/expert_issues_background">

        <TextView
            android:id="@+id/issues_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have questions related Acne"
            android:fontFamily="@font/worksansmedium"
            android:padding="@dimen/padding_10"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size14"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_lay_id"
        android:padding="@dimen/padding_10"
        android:text="My query is not listed"
        android:fontFamily="@font/worksansmedium"
        android:textSize="@dimen/text_size14"
        android:textColor="@color/purple"/>

</RelativeLayout>
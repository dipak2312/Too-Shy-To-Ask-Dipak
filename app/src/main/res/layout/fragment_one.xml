<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.InfoCard.HealthCategoryFragment">

    <RelativeLayout
        android:id="@+id/rel_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your categories that represent what you want to see"
            android:textColor="@color/black"
            android:fontFamily="@font/worksansregular"
            android:textSize="@dimen/text_size14"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cate_title"
            android:layout_marginTop="@dimen/margin_20"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_40">

        <TextView
            android:id="@+id/skip_btn"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:text="@string/skip"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:fontFamily="@font/worksanssemibold"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/purple"/>


        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_button_inactive"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

</RelativeLayout>